{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "page": "readonly"
  },
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "always"
      }
    ],
    "prefer-arrow-callback": "off",
    "func-names": "off",
    "no-undef": "off",
    "sort-imports": "warn",
    "import/no-unresolved": [2, { "ignore": ["\\?module"] }]
  }
}
